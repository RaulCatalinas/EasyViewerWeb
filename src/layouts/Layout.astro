---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Web to download YouTube videos" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    min-height: 100%;
  }

  html {
    box-sizing: border-box;
    background: rgb(2 0 36);
    background: linear-gradient(
      180deg,
      rgb(2 0 36 / 100%) 0%,
      rgb(9 9 121 / 100%) 35%,
      rgb(0 212 255 / 100%) 100%
    );
  }

  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }

  html,
  body {
    max-width: 100vw;
    overflow-x: hidden;
  }
</style>
