---
// i18n
import { getLangFromUrl } from '@/i18n/utils'

// Third-Party Components
import SpeedInsights from '@vercel/speed-insights/astro'
import { SEO } from 'astro-seo'

// Components
import Header from '@/components/headers/Header.astro'

interface Props {
  title: string
}

const { title } = Astro.props
const lang = getLangFromUrl(Astro.url)
---

<!doctype html>
<html {lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link
      rel="preload"
      href="/fonts/inter-latin-400-normal.woff2"
      as="font"
      crossorigin="anonymous"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <SEO
      description="Descarga gratis videos y audios de YouTube sin marca de agua y en alta calidad. EasyViewer, la mejor herramienta para descargar videos de YouTube. ¡Visita nuestra web ahora!"
      extend={{
        meta: [
          {
            name: 'Content-Security-Policy',
            content: "script-src 'self'"
          },
          {
            name: 'X-Frame-Options',
            content: 'SAMEORIGIN'
          },
          {
            name: 'X-Content-Type-Options',
            content: 'nosniff'
          },
          {
            name: 'Referrer-Policy',
            content: 'no-referrer'
          },
          {
            name: 'Permissions-Policy',
            content: `geolocation=(self "${Astro.url.href}"), microphone=()`
          },
          {
            name: 'description',
            content:
              'Download free videos and audios from YouTube without watermark and in high quality. EasyViewer, the best tool to download YouTube videos, visit our website now!'
          }
        ]
      }}
      twitter={{
        creator: '@CatalinasRaul',
        site: '@CatalinasRaul',
        card: 'app',
        image: `${Astro.url.href}seo-image.webp`,
        imageAlt: 'EasyViewerLogo',
        description:
          'Descarga gratis videos y audios de YouTube sin marca de agua y en alta calidad. EasyViewer, la mejor herramienta para descargar videos de YouTube. ¡Visita nuestra web ahora!',
        title:
          'EasyViewer, la mejor web para descargar vídeos/audios de YouTube'
      }}
      languageAlternates={[
        {
          href: Astro.url.href,
          hrefLang: 'es'
        },
        {
          href: `${Astro.url.href}en`,
          hrefLang: 'en'
        }
      ]}
      openGraph={{
        basic: {
          title:
            'EasyViewer, la mejor web para descargar vídeos/audios de YouTube',
          url: Astro.url.href,
          type: 'website',
          image: `${Astro.url.href}seo-image.webp`
        },
        image: {
          secureUrl: `${Astro.url.href}seo-image.webp`,
          alt: 'EasyViewer logo',
          type: 'image/webp',
          width: 630,
          height: 630
        },
        optional: {
          description:
            'Descarga gratis videos y audios de YouTube sin marca de agua y en alta calidad. EasyViewer, la mejor herramienta para descargar videos de YouTube. ¡Visita nuestra web ahora!',
          localeAlternate: ['en', 'es'],
          locale: 'es_ES',
          siteName: 'EasyViewer'
        }
      }}
    />
  </head>
  <body>
    <Header />
    <slot />
    <SpeedInsights />
    <style is:global>
      :root {
        min-height: 100%;
      }

      html {
        box-sizing: border-box;
        background: rgb(2 0 36);
        background: linear-gradient(
          180deg,
          rgb(2 0 36 / 100%) 0%,
          rgb(9 9 121 / 100%) 35%,
          rgb(0 212 255 / 100%) 100%
        );
      }

      *,
      *::before,
      *::after {
        box-sizing: inherit;
      }

      html,
      body {
        max-width: 100vw;
        overflow-x: hidden;
      }

      /* Fonts */
      @font-face {
        font-family: 'Inter';
        src: url('/fonts/inter-latin-400-normal.woff2') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: fallback;
      }
    </style>
  </body>
</html>
