<progress max="100" class="w-full mt-4 h-4" id="progress-bar"></progress>

<script>
  // Events
  import { listenIsDownloadingEvent } from "@/events/download";

  // Controllers
  import { progressBarController } from "@/controllers/progress-bar";

  const progressBar = document.getElementById("progress-bar");

  if (progressBar instanceof HTMLProgressElement) {
    listenIsDownloadingEvent((isDownloading) =>
      progressBarController({ progressBar, isDownloading }),
    );
  }
</script>
