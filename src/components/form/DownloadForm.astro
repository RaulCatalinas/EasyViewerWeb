---
// Components
import DownloadButton from '../buttons/DownloadButton'

// i18n
import { getJson, getLangFromUrl } from '@/i18n/utils'

const lang = getLangFromUrl(Astro.url)
const { placeholders, labels } = getJson(lang)
---

<form class="flex flex-col p-4 rounded-lg bg-indigo-200 w-[400px]">
  <label for="input-url" class="mb-2 text-xl">
    {labels.input}
    <span class="text-red-600 ml-1">*</span>:
  </label>
  <input
    type="url"
    class="p-2 mb-4 rounded text-base resize-none disabled:cursor-not-allowed disabled:bg-gray-500"
    id="input-url"
    placeholder={placeholders.input}
    required
    autofocus
  />
  <div class="flex flex-col items-center justify-center">
    <DownloadButton downloadVideo={true} i18nURL={Astro.url} client:load />
    <DownloadButton downloadVideo={false} i18nURL={Astro.url} client:load />
  </div>
</form>
