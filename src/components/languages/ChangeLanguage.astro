---
import Option from "./Option.astro"
---

<div class="flex flex-col items-center justify-center">
  <label
    for="select-language"
    class="text-lg mb-2 block text-white text-center"
  >
    Select language
  </label>
  <select
    id="select-language"
    class="p-2 text-base rounded cursor-pointer focus:border-blue-500"
  >
    <Option value="spanish" text="Spanish" />
    <Option value="english" text="English" />
  </select>
</div>